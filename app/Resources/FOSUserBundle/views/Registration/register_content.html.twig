{% trans_default_domain 'FOSUserBundle' %}

<link href="{{ asset('bundles/app/css/register.css') }}" type="text/css" rel="stylesheet" />

{{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register'), 'attr': {'class': 'fos_user_registration_register'}}) }}
{{ form_errors(form) }}
<div class="input-field">
    {{ form_widget(form.username, {'attr': {'class': 'border-bot-green-color'}}) }}
    {{ form_label(form.username,null, {'label_attr': {'class': 'green-color'}}) }}
    {{ form_errors(form.username) }}
</div>

<div class="input-field">
    {{ form_widget(form.email, {'attr': {'class': 'border-bot-green-color'}}) }}
    {{ form_label(form.email,null, {'label_attr': {'class': 'green-color'}}) }}
    {{ form_errors(form.email) }}
</div>

<div class="input-field">
    {{ form_widget(form.plainPassword.first, {'attr': {'class': 'border-bot-green-color'}}) }}
    {{ form_label(form.plainPassword.first,null, {'label_attr': {'class': 'green-color'}}) }}
    {{ form_errors(form.plainPassword.first) }}
</div>

<div class="input-field section">
    {{ form_widget(form.plainPassword.second, {'attr': {'class': 'border-bot-green-color'}}) }}
    {{ form_label(form.plainPassword.second,null, {'label_attr': {'class': 'green-color'}}) }}
</div>

<div class="input-field section">
    {{ form_widget(form.gender,{'attr': {'class': 'border-bot-green-color green-color'}}) }}
    {{ form_label(form.gender,null, {'label_attr': {'class': 'green-color'}}) }}
    {{ form_errors(form.gender) }}
</div>

<div class="input-field section">
    {{ form_widget(form.birthday,{'attr': {'class': 'datepicker border-bot-green-color green-color'}}) }}
    {{ form_label(form.birthday,null, {'label_attr': {'class': 'green-color'}}) }}
    {{ form_errors(form.birthday) }}
</div>
<div class="center-align section">
    <input type="submit" class="btn waves-effect waves-light green-bck dark-blue-color" value="{{ 'registration.submit'|trans }}" />
</div>
{{ form_end(form) }}
<div class="center-align">
    <p class="tw"><span>Déjà inscrit ? </span><a href="{{ path('fos_user_security_login') }}"><span class="green-color">Se connecter</span></a></p>
    <p class="tw"><a href="{{ path('fos_user_resetting_request') }}"><span class="green-color">J'ai oublié mon mot de passe</span></a></p>
</div>
<hr>
<script src="{{ asset('bundles/app/js/register.js') }}" type="text/javascript"></script>


