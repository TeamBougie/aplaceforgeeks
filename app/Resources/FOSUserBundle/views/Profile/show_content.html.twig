{% trans_default_domain 'FOSUserBundle' %}


    {% block content %}
    <!-- Page Content -->
    <div id="page-content-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div>
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs" role="tablist">
                            <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Vue d'ensemble</a></li>
                            <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Mes publications</a></li>
                            <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Mes abonnements</a></li>
                            <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Publications comment√©es</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane active" id="home">Toz</div>
                            <div role="tabpanel" class="tab-pane" id="profile">
                                {% for post in app.user.posts %}
                                <div class="panel panel-default">
                                    <div class="panel-body">
                                        <div>{{ post.title }}</div>
                                        <p>
                                        <div>{{ post.description }}</div>
                                        <p>
                                    </div>
                                    <hr>
                                    <div>
                                        <a href="{{ path('app_post_edit',{'id': post.id}) }}">
                                            <button type="button" class="btn btn-default" aria-label="Left Align">
                                                <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                            </button>
                                        </a>
                                        <a href="{{ path('app_post_delete',{'id': post.id}) }}">
                                            <button type="button" class="btn btn-default" aria-label="Left Align">
                                                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                            </button>
                                        </a>
                                    </div>
                                </div>
                                {% else %}
                                    Aucun post.
                                {% endfor %}
                            </div>
                            <div role="tabpanel" class="tab-pane" id="messages">Some content here</div>
                            <div role="tabpanel" class="tab-pane" id="settings">Some content here</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% endblock %}

